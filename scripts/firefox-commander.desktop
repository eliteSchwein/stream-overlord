[Desktop Entry]
Type=Application
Name=Firefox Commander
Comment=Open Stream Commander in kiosk mode
Exec=sh -c 'while ! curl -fs http://127.0.0.1:8105/commander >/dev/null 2>&1; do sleep 0.5; done; sleep 0.5 && firefox --kiosk --no-remote --new-instance http://127.0.0.1:8105/commander'
X-GNOME-Autostart-enabled=true
